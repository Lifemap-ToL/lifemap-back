# --- POSTGIS SOURCE ---

[[datasource]]
name = "pg"
[datasource.postgis]
url = "postgresql://{{ postgresql_user }}:{{ postgresql_password }}@postgis/{{ postgresql_db }}"


# --- ASSETS ---

[[assets.static]]
dir = "assets"
path = "/assets"


# --- CACHE ---

[[tilestore]]
name = "tilecache"
[tilestore.files]
base_dir = "/opt/data/tilecache"

[[tilestore]]
name = "mbtilecache"
[tilestore.mbtiles]
path = "/opt/data/tilecache.mbtiles"

[[tilestore]]
name = "pmtilecache"
[tilestore.pmtiles]
path = "/opt/data/tilecache.pmtiles"


# --- GRID ---

[[grid]]
json = "/var/www/assets/CustomWebMercator_42.json"

